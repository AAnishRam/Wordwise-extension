{
  "manifest_version": 3,
  "name": "Wordwise",
  "version": "1.0.0",
  "description": "Wordwise is a browser extension that helps you learn new words while you browse the web. It provides definitions, synonyms.",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://www.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content-script.js"]
    }
  ]
}
